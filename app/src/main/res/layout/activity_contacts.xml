<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.francisqueins.breakingtheice.MainActivity"
    android:background="@color/colorBlack">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGrey" >

        <com.example.francisqueins.breakingtheice.TypefacedTextView
            android:id="@+id/contactsTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/colorOlive"
            android:gravity="center_vertical|center_horizontal"
            android:minHeight="45dp"
            android:text="@string/contacts_title"
            android:textSize="@dimen/textTitleSize"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/button1"
            android:background="@color/colorGrey"
            android:minHeight="45dp"
            android:onClick="showAddLocation"
            android:text="@string/add_button"
            android:textAllCaps="false"
            android:textColor="@color/colorLightBlue"
            android:textSize="@dimen/textTitleSize" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TableRow>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorLightGray" >
    </ListView>

</TableLayout>
